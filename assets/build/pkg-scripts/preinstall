#!/bin/sh
#This is a sample preinstall or postinstall script.
#Your logic goes here.
#if [ your_logic_returns_false ]
#then
#     exit -1
#fi
#exit 0
if type -p java; then
    echo found java executable in PATH
    _java=java
elif [[ -n "$JAVA_HOME" ]] && [[ -x "$JAVA_HOME/bin/java" ]];  then
    echo found java executable in JAVA_HOME     
    _java="$JAVA_HOME/bin/java"
else
    osascript -e 'tell app "Terminal" to display dialog "no java"'
    echo "no java"
    exit -1
fi

if [[ "$_java" ]]; then
    version=$("$_java" -version 2>&1 | awk -F '"' '/version/ {print $2}')
    echo version "$version"
    if [[ "$version" > "1.5" ]]; then
        osascript -e 'tell app "Terminal" to display dialog "version is more than 1.5"'
        echo version is more than 1.5
        exit -1
    else         
        osascript -e 'tell app "Terminal" to display dialog "version is less than 1.5"'
        echo version is less than 1.5
        exit -1
    fi
else
    exit -1
fi